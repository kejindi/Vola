<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.Vola" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_dark_green</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/coral_orange</item>
        <item name="colorSecondaryVariant">@color/coral_orange_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Tertiary color -->
        <item name="colorTertiary">@color/cobalt_blue</item>
        <item name="colorOnTertiary">@color/white</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Splash screen -->
        <item name="android:windowSplashScreenBackground">@color/primary_green</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_vola_logo</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Vola</item>
        
        <!-- Window preferences -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        
        <!-- Shape appearance -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Vola.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Vola.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Vola.Large</item>
        
        <!-- Typography -->
        <item name="typographyLabelLarge">@style/TextAppearance.Vola.LabelLarge</item>
    </style>
    
    <!-- Splash Screen Theme -->
    <style name="Theme.Vola.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_green</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_vola_logo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Vola</item>
    </style>
    
    <!-- Shape Appearances -->
    <style name="ShapeAppearance.Vola.Small" parent="ShapeAppearance.Material3.Small">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    
    <style name="ShapeAppearance.Vola.Medium" parent="ShapeAppearance.Material3.Medium">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <style name="ShapeAppearance.Vola.Large" parent="ShapeAppearance.Material3.Large">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>
    
    <!-- Text Appearances -->
    <style name="TextAppearance.Vola.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Colors -->
    <color name="primary_green">#2E8B57</color>
    <color name="primary_dark_green">#1B5E20</color>
    <color name="coral_orange">#FF6B35</color>
    <color name="coral_orange_dark">#E65100</color>
    <color name="cobalt_blue">#0047AB</color>
    <color name="success_green">#34A853</color>
    <color name="warning_yellow">#FBBC04</color>
    <color name="error_red">#EA4335</color>
    <color name="info_blue">#4285F4</color>
    <color name="white">#FFFFFF</color>
    <color name="black">#000000</color>
    <color name="background">#F8F9FA</color>
    <color name="surface">#FFFFFF</color>
    <color name="on_background">#202124</color>
    <color name="on_surface">#202124</color>
    <color name="surface_variant">#E8EAED</color>
    <color name="on_surface_variant">#5F6368</color>
    <color name="outline">#DADCE0</color>
    
    <!-- Category Colors -->
    <color name="category_food">#FF6B6B</color>
    <color name="category_transport">#4ECDC4</color>
    <color name="category_utilities">#45B7D1</color>
    <color name="category_shopping">#96CEB4</color>
    <color name="category_health">#FFEAA7</color>
    <color name="category_entertainment">#DDA0DD</color>
    <color name="category_education">#98D8C8</color>
    <color name="category_housing">#6A89CC</color>
    <color name="category_gifts">#FF9FF3</color>
    <color name="category_travel">#54A0FF</color>
    <color name="category_salary">#2E8B57</color>
    <color name="category_freelance">#FF9F43</color>
</resources>